package assignment2;

public class Smartphones {

	String brand;
	String model;
	String color;
	double price;
	
	
	
	Smartphones(String brand, String model, String color){
		this.brand = brand;
		this.model = model;
		this.color = color;
	}
	
	
	Smartphones(String brand, String model, String color,double price){

		this(brand,model,color); //using this() for constructor calling
		this.price = price;
	}
	
	void show() {
		System.out.println(brand);
		System.out.println(model);
		System.out.println(color);
		System.out.println(price);
	}
	
	
	public static void main(String[] args) {
		
		Smartphones S1 = new Smartphones("Samsung","Note 20", "Midnight Black", 70000.00);
		Smartphones S2 = new Smartphones("Apple", "Iphone 12", "White");
		
		
		S1.show();
		S2.show();
	}
	
	
	
}
